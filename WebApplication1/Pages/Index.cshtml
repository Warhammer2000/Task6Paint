@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DrawingHubs.Pages.IndexModel
@{ 
    ViewData["Title"] = "Home page";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
	<a asp-page="/Board" asp-route-BoardId="123">Join Board 123</a>
</div>
<div class="leftsideElements">
	
	<h2>Active Boards</h2>

	<ul>
		@foreach (var board in Model.Boards)
		{
			<li><a href="/Board/@board.BoardId">Join @board.BoardId</a></li>
		}
	</ul>
	<form method="post">
		<input type="text" name="boardId" placeholder="Enter new board ID" />
		<button type="submit">Create New Board</button>
	</form>
</div>
